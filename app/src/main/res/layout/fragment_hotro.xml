<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FF5722">


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

                <TextView
                    android:background="@drawable/custom_hotro1"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:paddingTop="5dp"
                    android:text="Cần hỗ trợ nhanh, vui lòng gọi 1900 1212 (7:00 AM - 19:00 P.M) hoặc gửi tin nhắn vào Beecar Fanpage"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hướng dẫn : "
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:textSize="20dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textAllCaps="true" />
                <LinearLayout
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="- Hỏi đáp nhanh"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="- Hướng dẫn chủ xe"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="- Hướng dẫn đặt xe"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="- Hướng dẫn thanh toán"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
            </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin :"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <TextView

                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:text="- Thông tin công ty" />
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:text="- Truy cập web Beecar" />
                        <TextView
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:text="- Quy chế hoạt động" />
                        <TextView
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:paddingTop="10dp"
                            android:text="- Giải quyết tranh chấp" />

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:text="- Chính sách và quy định" />
                        <TextView
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:text="- Facebook Beecar" />
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:text="- Hỏi và trả lời " />
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:text="- bảo mật thông tin" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>