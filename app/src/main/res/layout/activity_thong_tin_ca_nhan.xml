<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongTinCaNhan">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_acc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_huy_don"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search_vehicles_co_lai"
            android:paddingTop="25dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/taixe" />

            <TextView
                android:id="@+id/tvtt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:text="Full Name"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Tài Khoản"
                android:textColor="#091970"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtt1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_edit_text_line_bottom"
                android:gravity="center_vertical"
                android:hint="Tài khoản đăng nhập"
                android:paddingLeft="10dp"
                android:textSize="22dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Email"
                android:textColor="#091970"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtt3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_edit_text_line_bottom"
                android:gravity="center_vertical"
                android:hint="Tài khoản email"
                android:paddingLeft="10dp"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Số điện thoại"
                android:textColor="#091970"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtt4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_edit_text_line_bottom"
                android:gravity="center_vertical"
                android:hint="Số điện thoại"
                android:paddingLeft="10dp"
                android:textSize="22dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

